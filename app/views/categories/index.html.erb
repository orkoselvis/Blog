<p id="notice"><%= notice %></p>

<h1><%= t('category_page.categories') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('category_page.name') %></th>
      <th><%= t('category_page.desc') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.desc %></td>
        <td><%= link_to t('articles_page.show'), category %></td>
        <td><%= link_to t('articles_page.edit'), edit_category_path(category) %></td>
        <td><%= link_to t('category_page.destroy'), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

