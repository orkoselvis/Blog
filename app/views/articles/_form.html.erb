<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category"}) %><br>
  <%= f.label :title %> <br>
  <%= f.text_field :title, placeholder: "Type the article title here" %> <br>
  <%= f.label :text %> <br>
  <%= f.text_area :text, size: "60x12", placeholder: "Type the article text here" %>
  <%= f.submit %>
<% end %>
