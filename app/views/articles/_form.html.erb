<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.label :title %> <br>
  <%= f.text_field :title, placeholder: "Type the article title here" %> <br>
  <%= f.label :text %> <br>
  <%= f.text_area :text, size: "60x12", placeholder: "Type the article text here" %> <br>
  <%= f.select_tag(:category_id, options_for_select(@categories), :prompt => “Select one!”) %>
  <%= f.submit %>
<% end %>
